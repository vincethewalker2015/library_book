<div class="book">
  <div class="card">
    <div class="card-image">
      <figure class="">
        <%#= link_to image_tag(book.thumbnail), book %>
      </figure>
    </div>
    <div class="row">
      <div class="col-md-8 col-md-offset-4">
        <div class="media-content">
          <p class="title is-4"><%= book.title %></p>
          <p class="subtitle is-6"><%= book.author %></p>
        </div>
      </div>

      <div class="row">
         <% if subscribed? %>

          <% if user_added_to_library?(current_user, book) %>

            <%= link_to 'Remove from library', add_book_path(book, type: "remove"), method: :put, class: "btn btn-danger btn-lg" %>

            <% if controller.controller_name == "library" %>
              <%= link_to 'Download', '#', class:"btn btn-success btn-lg" %>
            <% end %>

          <% else %>
            <%= link_to 'Add to library', add_book_path(book, type: "add"), method: :put, class: "btn btn-success btn-lg" %>
          <% end %>

        <% else %>
          <%= link_to 'Add to library', new_user_registration_path, class: "btn btn-success btn-lg" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <%# if admin? %>
      <%= link_to 'Edit', edit_book_path(@book), class:"btn btn-primary btn-sm" %>
      <%= link_to 'Delete', book_path(@book), method: :delete, data: { confirm: "Are you sure? "}, class:"btn btn-danger btn-sm" %>
    <%# end %>
  </div>
</div>